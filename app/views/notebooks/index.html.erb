<h1>Welcome to Nerds Notes</h1>
 <h3>you can view free notes</h3>
<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Course</th>
    <th>Teacher</th>
    <th>Title</th>
    <th>price</th>
    <th>Nerd</th>
    <th> Acess </th>
  </tr>

<% @notebooks.each do |notebook| %>
  <tr>
    <td><%= notebook.course %></td>
    <td><%= notebook.teacher %></td>
    <td><%= notebook.title %></td>
    <% if notebook.free   %>
    <td> Free </td>
     <td><%= link_to 'Show', notebook %> </td>
     <% else %>
     <td> <%= notebook.price %> <%=link_to "  pay to show this note", add_payement_path %></td>
     <% end %>
    <td><%= User.find( notebook.user_id).name %></td>

   
     <% if current_user==(User.find( notebook.user_id))%>
    <%= link_to 'Edit', edit_notebook_path(notebook) %>
    <%= link_to 'Destroy', notebook, confirm: 'Are you sure?', method: :delete %>
    <%end %>
    </td>
  </tr>
<% end %>
</table>

